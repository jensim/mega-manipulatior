<idea-plugin>
    <id>com.github.jensim.megamanipulatior</id>
    <name>mega-manipulatior</name>
    <vendor>jensim</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Mega Manipulator" secondary="true" icon="AllIcons.General.Modified" anchor="bottom"
                    factoryClass="com.github.jensim.megamanipulatior.toolswindow.MyToolWindowFactory"/>
        <moduleType id="mega_manipulator"
                    implementationClass="com.github.jensim.megamanipulatior.module.MegaManipulatorModuleType"/>
        <moduleBuilder builderClass="com.github.jensim.megamanipulatior.module.MegaManipulatorModuleBuilder"
        />
    </extensions>
</idea-plugin>
